<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Unfiltered - Profile</title>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;500&family=Shadows+Into+Light&display=swap"
    rel="stylesheet">
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    body {
      font-family: 'Inter', sans-serif;
    }

    .mood-tag {
      font-family: 'Shadows Into Light', cursive;
    }
  </style>
</head>

<body class="bg-zinc-900 text-gray-200 min-h-screen flex flex-col justify-between">


  <!-- Profile Container -->
  <div class="max-w-xl mx-auto w-full px-4 pt-6 space-y-6">

    <!-- Username and Logout Button -->
    <div class="flex justify-between items-center">
      <div class="text-center">
        <h1 class="text-3xl font-semibold text-violet-500">
          <%= user.username %> 
        </h1>
        <p class="text-xl text-blue-300 mt-2" style="font-family: 'Kalam', cursive;">
          <%= user.name %>
        </p>
      </div>
      <div>
        <a href="/logout" class="text-violet-500 hover:text-violet-400 text-lg font-semibold">Logout</a>
      </div>
    </div>

    

    <!-- Posts Feed -->
    <div class="max-w-xl mx-auto w-full px-4 pt-6 space-y-6 pb-24">

      
      <% posts.forEach(function(post){ %>
        <div class="bg-zinc-800 rounded-xl p-4 shadow-md">
          <p class="text-lg text-gray-500 m-3"><%= post.user.username%> </p>
          <img
            src="data:<%= post.imageType %>;base64,<%= post.imageData.toString('base64') %>" 
            alt="User upload"
            class="w-full max-w-[250px] mx-auto rounded-lg mb-3 object-cover"
          />
          <p class="text-violet-400"><%= post.caption %></p>
          <div>
            <samp class="p-2"><%= post.likes.length%></samp> 
            <a class="text-red-400" href="/like/<%= post._id %>">Like</a>
          </div>
          <p class="text-sm text-gray-500 mt-2"><%= post.date.toLocaleString() %></p>
        </div>
      <% }) %>
    </div>
    

  </div>

  <!-- Bottom Navbar -->
  <div class="w-full bg-zinc-800 p-4 fixed bottom-0 left-0 right-0 flex justify-center border-t border-zinc-700 gap-4">
    <a href="/home"
      class="bg-violet-500 hover:bg-violet-400 text-white text-lg px-6 py-2 rounded-full shadow-md transition">Home</a> 
    <a href="/upload"
      class="bg-violet-500 hover:bg-violet-400 text-white text-2xl px-6 py-2 rounded-full shadow-md transition">+</a>
    <a href="/profile"
      class="bg-violet-500 hover:bg-violet-400 text-white text-lg px-6 py-2 rounded-full shadow-md transition">Profile</a>
  </div>

</body>

</html>